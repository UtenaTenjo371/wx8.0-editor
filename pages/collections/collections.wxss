/* pages/collections/collections.wxss */
page{
  height:100%;
  background-color: #f0f2f5;
}
.top-area{
  background:#fff;
}
.searchbar{
  background:#eee;
  width:80%;
  margin:0 auto;
}
/*瀑布流*/
.waterfallFlow{
  width:96%;
  display: flex;
  flex-flow:row wrap;
}
.card{
  width:47%;
  margin-left: 3%;
	margin-bottom:3%;		
	padding:2%;
  padding-top:5%;	
  box-sizing: border-box;
	border:0px solid #cc22b0; /* 边框 */
	box-shadow: 0 2px 2px rgba(34, 25, 25, 0.4); /* 框阴影 */
  text-align: center;
  background:#fff;
}
.display-area>image{
  width:95%;
	margin:0 auto;
}
.display-area>text{
  font-size:15px;
	color:#717171;
}
.btn-like{
  border:none!important;
  padding:0;
  align-self:flex-end;
}
.btn-like>image{
  width:50rpx;
  height:50rpx;
}