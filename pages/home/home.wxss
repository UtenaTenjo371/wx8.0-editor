/* pages/home/home.wxss */
/*swiper*/
page{
  height:100%;
  background-color: #f0f2f5;
}
.swiper-card{
  height:85%;
  background-color: #fff;
}
.swiper-card>swiper{
  margin:10rpx auto;
  width:720rpx;
  height:100%;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  border-radius: 5px;
}
swiper-item{
  display:flex;
  flex-wrap:wrap;
  justify-content: space-between;
  align-items: flex-start;
}
.swiper-img{
  overflow: hidden;
  width:750rpx;
  height:90%;
}
.swiper-img>image{
  width:750rpx;
  height:900rpx;
}
swiper-item>text{
  font-family:sans-serif;
  margin-left:30rpx;
}
.img-button{
  margin:10rpx 20rpx;
}
.img-button>image{
  width:60rpx;
  height:60rpx;
}
.img-title{
  font-size:1.2rem;
}
/*tabButton*/
.btn-area{
  height:10%;
  margin-top:20rpx;
  display:flex;
  flex-direction: row;
  justify-content: center;
}
.tab-button{
  width:300rpx;
  text-align:center;
  background-color: #ffffff;
  padding:10rpx;
  margin:20rpx;
  border-radius: 20rpx;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  font-family:sans-serif;
  display:flex;
  align-items:center;
  justify-content: center;
}
.tab-button>image{
  width:50rpx;
  height:50rpx;
}