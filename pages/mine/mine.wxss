/* pages/mine/mine.wxss */
page{
  height:100%;
  background-color: #f0f2f5;
}
/*用户信息*/
.userinfo-avatar{
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userInfo{
  height:260rpx;
  background-color: #85dbd1;
  margin:0;
  padding:5%;
  box-sizing: border-box;
  color:#fff;
  display:flex;
}
.userInfo-nickname{
  font-family: sans-serif;
  font-size:20px;
}
.userinfo-uid{
  width:100rpx;
}
/*标签选择器*/
.filter{
  background-color: #fff;
  margin-bottom: 20rpx;
  color:#59ada4;
  display:flex;
}
.filter>view{
  width:350rpx;
  padding:15rpx;
  text-align: center;
}
/*瀑布流*/
.waterfallFlow{
  width:96%;
  display: flex;
  flex-flow:row wrap;
}
.card{
  width:47%;
  margin-left: 3%;
	margin-bottom:3%;		
	padding:2%;
  padding-top:5%;	
  box-sizing: border-box;
	border:0px solid #cc22b0; /* 边框 */
  box-shadow: 0 1px 1px rgba(110, 110, 110, 0.4); /* 框阴影 */
  border-radius: 10rpx;
  text-align: center;
  background:#fff;
}
.display-area>image{
  width:95%;
	margin:0 auto;
}
.display-area>text{
  font-size:15px;
	color:#717171;
}
.btn-like{
  border:none!important;
  padding:0;
  align-self:flex-end;
}
.btn-like>image{
  width:50rpx;
  height:50rpx;
}